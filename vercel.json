    {
      "version": 2,
      "builds": [
        {
          "src": "server/**/*.ts",
          "use": "@vercel/node"
        },
        {
          "src": "client/package.json",
          "use": "@vercel/static-build",
          "config": { "distDir": "dist/public" }
        }
      ],
      "routes": [
        {
          "src": "/api/(.*)",
          "dest": "/server/$1.ts"
        },
        {
          "src": "/(.*)",
          "dest": "/dist/public/$1"
        }
      ]
    }
